@model List<Group>
@using InYourInterest.Data.Models

@{
    Layout = "~/Views/Shared/_GroupLayout.cshtml";
}

<section id="counts" class="counts">
    <div class="container">
        <div class="row counters">
            <div class="col-lg-3 col-6 text-center">
                <span data-purecounter-start="0" data-purecounter-end="521" data-purecounter-duration="1"
                      class="purecounter">@Model.Count</span>
                    <p>Groups</p>
            </div>
            <div class="col-lg-6 col-6 text-center">
                 <span data-purecounter-start="0" data-purecounter-end="521" data-purecounter-duration="1"
                          class="purecounter">My</span>
                   <p>Groups</p>
            </div>
            <div class="col-lg-3 col-6 text-center">
                   <a asp-action="Create" asp-controller="Group">
                      <span data-purecounter-start="0" data-purecounter-end="521" data-purecounter-duration="1"
                        class="purecounter btn-create-gr">Create community</span>
                   </a>
            </div>
        </div>
     </div>
</section>

        <section id="our-values" class="our-values">
            <div class="container">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-6 d-flex align-items-stretch">
                            <a class="card" href="/Group/MyGroup/@item.Id" style='background-image: url("@item.SmallImage");'>
                                <div class="card-body">
                                    <h5 class="card-title">@item.Name</h5>
                                    <p class="card-text">@item.Description.Substring(0, Math.Min(250, item.Description.Length))...</p>
                                    <div class="read-more"><i class="bi bi-arrow-right"></i>Read More»</div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </section>
