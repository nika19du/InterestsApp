@model List<Event>
@using InYourInterest.Data.Models

@{
    ViewData["Title"] = "YourEvents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2 class="text-color d-flex justify-content-center">Your Organized Events</h2>
<hr />
<div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="container marketing">
        <!-- Three columns of text below the carousel -->
        <div class="row myR">
            @foreach (var item in Model)
            {
                <div class="col-lg-4">
                    <img class="bd-placeholder-img rounded-circle" width="140" height="140" src="@item.Image" role="img" aria-label="Placeholder: 140x140" preserveAspectRatio="xMidYMid slice" focusable="false">
                    <h2>@item.Name</h2>
                    <p>@item.Description.Substring(0, Math.Min(150, item.Description.Length))...</p>
                    <i><a class="btn text-color" href="Details/@item.Id">View details »</a></i>
                </div>
            }
        </div>
    </div>
</div>